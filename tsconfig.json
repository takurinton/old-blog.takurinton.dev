{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["es6", "dom"],
    "noImplicitReturns": true,
    "outDir": "./dist",
    "sourceMap": true,
    "target": "es6",
    "strict": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "@takurinton/tsserver-plugin-limit-import-scope",
        "patterns": ["shared", "components", "./**"]
      }
    ]
  },
  "compileOnSave": true,
  "include": ["./**/*"]
}
